<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".ads_detail">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color4">


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/categ_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:hint="shop category"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/address_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:hint="address"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:stretchColumns="1">

                    <TableRow>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_margin="10dp"
                            android:text="Date : "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/date_detail"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:hint="your date  here: "
                            android:textSize="20sp" />


                    </TableRow>
                    <TableRow>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_margin="10dp"
                            android:text="Services: "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/serv_detail"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:hint="your desc no here: "
                            android:textSize="20sp" />


                    </TableRow>
                    <TableRow>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_margin="10dp"
                            android:text="Description: "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/desc_detail"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:hint="your desc no here: "
                            android:textSize="20sp" />


                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_margin="10dp"
                            android:text="Pro name : "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/proname_detail"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:hint="your address here: "
                            android:textSize="20sp" />


                    </TableRow>
                    <TableRow>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_margin="10dp"
                            android:text="Opening hours : "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hours_detail"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:hint="your address here: "
                            android:textSize="20sp" />


                    </TableRow>
                    <TableRow>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_margin="10dp"
                            android:text="Contact : "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/contact_detail"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:hint="your address here: "
                            android:textSize="20sp" />


                    </TableRow>




                    <TableRow>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_margin="10dp"
                            android:text="Remarks: "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/remark_detail"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:hint="your status here: "
                            android:textSize="20sp" />


                    </TableRow>


                </TableLayout>

                <ImageView
                    android:id="@+id/image_detail"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="10dp"
                    android:src="@color/color1" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>